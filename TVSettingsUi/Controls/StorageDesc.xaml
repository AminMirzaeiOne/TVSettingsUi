<UserControl x:Class="TVSettingsUi.Controls.StorageDesc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSettingsUi.Controls"
             Name="storageDesc">
    <StackPanel Orientation="Horizontal" Margin="0 10">
        
        <Border CornerRadius="5" Background="{Binding ElementName=storageDesc,Path=Color}" Width="20" Height="20" Margin="0 0 10 0"/>

        <TextBlock Text="{Binding ElementName=storageDesc,Path=Title}" FontSize="18" Foreground="#ffffff"/>


    </StackPanel>
</UserControl>
