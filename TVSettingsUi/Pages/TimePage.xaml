<UserControl x:Class="TVSettingsUi.Pages.TimePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSettingsUi.Pages"
             xmlns:uc="clr-namespace:TVSettingsUi.Controls"
             Name="timePage">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" MaxWidth="800" Margin="50 0">
       
        <uc:TimeSetting Title="Auto Attach" HasToggle="True" IsChecked="True"/>
        <uc:TimeSetting Title="Time Zone" HasText="True" HasToggle="False" Text="GMT +02:00, Eastern Eu..."/>
        <uc:TimeSetting Title="Daylight Saving" HasToggle="True"/>
        <uc:TimeSetting Title="24 Hours" HasToggle="True"/>
        <uc:TimeSetting Title="More ..."/>
        
    </StackPanel>
</UserControl>
