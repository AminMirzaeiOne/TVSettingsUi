<UserControl x:Class="TVSettingsUi.Pages.SettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSettingsUi.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20" x:Name="grid">
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto" Padding="0 20" VerticalAlignment="Center" Width="{Binding ElementName=grid,Path=ActualWidth}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <uc:Element Title="Network Setting" Icon="Wifi" ElementClick="NetworkSetting_ElementClick"/>
                <uc:Element Title="Time Setting" IsActive="True" Icon="Timelapse" ElementClick="Time_ElementClick"/>
                <uc:Element Title="Common" Icon="Layers" ElementClick="Storage_ElementClick"/>
                <uc:Element Title="About Us" Icon="Information" ElementClick="About_ElementClick"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
